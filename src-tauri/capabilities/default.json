{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "window:allow-destroy",
    "window:allow-close",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "shell:allow-stdin-write",
    "shell:allow-execute",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-message",
    "dialog:allow-confirm",
    "dialog:allow-ask",
    "notification:default",
    "updater:default"
  ]
}
